{
  "name": "serverless-ecommerce-backend",
  "version": "1.0.0",
  "description": "Serverless E-Commerce Traffic Spike Handler - Backend",
  "main": "handler.js",
  "scripts": {
    "deploy": "serverless deploy",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:prod": "serverless deploy --stage prod",
    "offline": "serverless offline start",
    "offline:start": "serverless offline start --httpPort 3001",
    "logs": "serverless logs -f getProducts",
    "logs:orders": "serverless logs -f createOrder",
    "dynamodb:install": "serverless dynamodb install",
    "dynamodb:start": "serverless dynamodb start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "remove": "serverless remove"
  },
  "keywords": [
    "serverless",
    "aws",
    "lambda",
    "dynamodb",
    "ecommerce"
  ],
  "author": "Cloud Architect",
  "license": "MIT",
  "dependencies": {
    "aws-sdk": "^2.1508.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "serverless": "^3.36.0",
    "serverless-dynamodb-local": "^0.2.40",
    "serverless-offline": "^13.3.0",
    "serverless-plugin-warmup": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
